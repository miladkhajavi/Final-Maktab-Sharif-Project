<body>

    <div class="row mt-5">
        <div class="col-md-6 m-auto">
            <div class="card card-body">
                <h1 class="text-center mb-3">
                    <i class="fas fa-user-plus"></i> Add New Article</h1>
                     <!-- message  -->
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <%= msg %>
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>

                <form action="/api/user/addArticle" method="POST" enctype="multipart/form-data">

                    <div class="form-group">
                            <label for="title">Article image</label><br>
                            <input type="file" name="image" ><br> <br>
                        </div>

                    <div class="form-group">
                        <label for="title">title</label>
                        <input type="title" id="title" name="title" class="form-control" placeholder="Enter title"
                            value="<%= typeof title != 'undefined' ? title : '' %>" />
                    </div>



                    <div class="form-group">
                        <label for="content">content</label>
                        
                        <textarea name="content" id="content"  class="form-control" placeholder="Enter content"
                            value="<%= typeof content != 'undefined' ? content : '' %>"></textarea>
                    </div>



                    <button type="submit" class="btn text-white bg-success btn-block">
                        Add article
                    </button>
                    <br>
                    <a href="/api/panel" class="btn btn-danger"> return</a>
                </form>


            </div>
        </div>
    </div>



