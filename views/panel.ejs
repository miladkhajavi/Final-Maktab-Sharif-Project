  <div class="todo-list-group container">
    <div class="row col-12">
        <% articles.forEach((articles,number) => { %>
        <div class="card col-12  col-md-3  m-5 cardArticles" style="width: 18rem;">
    
            <img src="/uploads/<%=articles.image%>" class="card-img-top" id="images" alt="...">
            <div class="card-body">
                <h5 class="card-title text-danger" id="title"><%=articles.title%></h5>
                <p class="card-text text-success" id="content"><%=articles.content%></p><hr><br>
                <small>create at: <%=articles.createAt%></small> <br> <br>
                <small>lastUpdate: <%=articles.lastUpdate%></small> <br><br><hr>

              
                <div calss="container row">
                <!-- <a href="/index/publicArticle/<%=articles.id%>" id="" class="btn btn-primary">more</a> -->
                <button id="singlePublic" class="btn btn-primary" data-id= <%=articles._id%>>more</button>
                
                </div>
                <small> <b> writen by:</b> <%=articles.owner.firstName%> <%=articles.owner.lastName%></small> <br><br>
            </div>
        </div>
        <% }) %>
    </div>
    </div>
 






