    <div class="container articlesssss">
        <div class="row col-12">

            <div class="card col-12 m-5" style="width: 18rem; text-align: center">

                <img src="/uploads/<%=article.image%>" class="card-img-top" alt="">
                <div class="card-body">
                    <h5 class="card-title text-success"><%=article.title%></h5>
                    <p class="card-text text-danger"><%=article.content%></p>
                    <small>create at: <%=article.createAt%></small> <br> <br>
                    <small>lastUpdate: <%=article.lastUpdate%></small> <br><br>
                    <small class="text-info">author: <%=owner%> <%=ownerlast%> </small> <br> <br>

                    <a href="../allArticles" class="btn btn-dark">All articles <%= owner%> <%=ownerlast%></a>
                </div>
            </div>

        </div>
    </div>

    <div class="container">
        <form action="/api/addComment" method="POST">
            <h1>Add comment</h1><br>

            <textarea name="comment" rows="2" class="col-6"></textarea>
            <textarea name="artic" class="d-none"><%= article._id%></textarea>
            <br>
            <input type="submit" value="submit" class="btn btn-success" id="submitComment">
        </form>

    </div>

    <div class="container classboxcomment">

        <div class="column">
            <div id="commentbox">
                <% table.forEach((table,i) => { %>
                    <div class="thiscomment">
                <div class="commentcol m-4 p-3">
                    <h5 class="text-info name=" artic"><span>@</span><%= table.userID.username%><h5>
                            <div class="text-dark" name="artic"><%=table.comment%></div><br>
                            <small class="text-success"><%= table.createAt%></small>
                                    <button class="btn btn-danger butn-delete-comment " id="delete-comment" data-id=<%=table._id%>>Delete</button>
                   </div>
                </div>
                <% }) %>
            </div>
        </div>

    </div>

